    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_challenges_box"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutEmail">

        <LinearLayout
            android:id="@+id/linearExe1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtExe1Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparentOrange"
                android:text="Exercise 1"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@color/transparentBlack">

                <Spinner
                    android:id="@+id/spinnerExe1"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginVertical="3dp"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </LinearLayout>


            <EditText
                android:id="@+id/txtRepCounts1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginVertical="3dp"
                android:background="@color/transparentBlack"
                android:hint="Enter repetion count"
                android:paddingHorizontal="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearExe2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtExe2Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparentOrange"
                android:text="Exercise 2"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@color/transparentBlack">

                <Spinner
                    android:id="@+id/spinnerExe2"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginVertical="3dp"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
            </LinearLayout>


            <EditText
                android:id="@+id/txtRepCounts2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginVertical="3dp"
                android:background="@color/transparentBlack"
                android:hint="Enter repetion count"
                android:paddingHorizontal="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearExe3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtExe3Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparentOrange"
                android:text="Exercise 3"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@color/transparentBlack">

                <Spinner
                    android:id="@+id/spinnerExe3"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginVertical="3dp"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </LinearLayout>


            <EditText
                android:id="@+id/txtRepCounts3"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginVertical="3dp"
                android:background="@color/transparentBlack"
                android:hint="Enter repetion count"
                android:paddingHorizontal="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>


        <Button
            android:id="@+id/btnAddChallenge"
            android:layout_width="120dp"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btn_orange_ripple"
            android:drawableStart="@drawable/ic_baseline_add_box_24"
            android:paddingHorizontal="20dp"
            android:text="@string/add_new"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="DuplicateSpeakableTextCheck,TouchTargetSizeCheck,TextContrastCheck" />

    </LinearLayout>


    <Button
        android:id="@+id/btnCancelChallenges"
        android:layout_width="145dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/btn_black_ripple"
        android:text="@string/cancel"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btnCreateChallenges"
        android:layout_width="145dp"
        android:layout_height="36dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/btn_orange_ripple"
        android:text="@string/create"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:ignore="DuplicateSpeakableTextCheck,TouchTargetSizeCheck,TextContrastCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>

